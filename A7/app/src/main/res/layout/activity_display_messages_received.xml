<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messaging.DisplayMessagesSentActivity">

    <TextView
        android:id="@+id/receivedMessagesHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/messages_received"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/receivedMessagesTopDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/navy_blue"
        app:layout_constraintBottom_toTopOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintStart_toStartOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/receivedMessagesHeader"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receivedMessagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receivedMessagesHeader" >
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/receivedMessagesBottomDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/receivedMessagesRecyclerView"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>